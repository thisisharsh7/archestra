{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["ARCHESTRA_*", "NEXT_PUBLIC_ARCHESTRA_*", "CODEGEN"],
  "globalDependencies": [".env"],
  "tasks": {
    "build": {
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "start": {
      "persistent": true,
      "cache": false
    },
    "lint": {
      "inputs": ["**/src/**/*.tsx", "**/src/**/*.ts", "./biome.json", "e2e-tests/**/*.ts", "shared/**/*.ts"]
    },
    "lint:fix": {
      "inputs": ["**/src/**/*.tsx", "**/src/**/*.ts", "./biome.json", "e2e-tests/**/*.ts", "shared/**/*.ts"]
    },
    "lint:fix:unsafe": {
      "inputs": ["**/src/**/*.tsx", "**/src/**/*.ts", "./biome.json", "e2e-tests/**/*.ts", "shared/**/*.ts"]
    },
    "check:ci": {
      "inputs": ["**/src/**/*.tsx", "**/src/**/*.ts", "./biome.json", "e2e-tests/**/*.ts", "shared/**/*.ts", "**/knip.config.ts", "**/package.json"]
    },
    "knip": {
      "inputs": ["**/src/**/*.tsx", "**/src/**/*.ts", "**/knip.config.ts", "**/package.json", "e2e-tests/**/*.ts", "shared/**/*.ts"]
    },
    "type-check": {
      "inputs": ["**/src/**/*.tsx", "**/src/**/*.ts", "e2e-tests/**/*.ts", "shared/**/*.ts"]
    },
    "test": {
      "cache": false
    },
    "test:e2e": {
      "cache": false,
      "passThroughEnv": ["PLAYWRIGHT_BROWSERS_PATH"]
    },
    "test:e2e:ui": {
      "cache": false
    },
    "codegen": {
      "cache": false
    },
    "@shared#codegen": {
      "dependsOn": ["@backend#codegen"],
      "cache": false
    },
    "db:generate": {
      "cache": false,
      "persistent": true
    },
    "db:migrate": {
      "inputs": ["backend/src/database/**/*.ts"]
    },
    "db:studio": {
      "persistent": true,
      "cache": false
    },
    "db:seed:mock-data": {
      "cache": false
    }
  }
}
